        const planGrid = document.getElementById('plan-grid');
        let completedDays = new Set(JSON.parse(localStorage.getItem('toeicCompleted_v3')) || []);

        function updateProgress() {
            const percent = Math.round((completedDays.size / 25) * 100);
            document.getElementById('progress-bar').style.width = percent + '%';
            document.getElementById('progress-text').innerText = percent + '%';
            localStorage.setItem('toeicCompleted_v3', JSON.stringify([...completedDays]));
        }

        function createCards() {
            for (let day = 1; day <= 25; day++) {
                const data = vocabularyData[day];
                const isChecked = completedDays.has(day);
                const card = document.createElement('div');
                card.className = 'cute-card p-6 flex flex-col h-full';
                
                let wordsHtml = data.words.map(w => `
                    <div class="word-item" onclick="this.classList.toggle('show-chinese')">
                        <span class="english-text font-bold text-gray-700">${w.en}</span>
                        <span class="chinese-text">${w.zh}</span>
                        <span class="text-xs text-pink-300">ğŸ”</span>
                    </div>
                `).join('');

                card.innerHTML = `
                    <div class="flex justify-between items-start mb-4">
                        <div class="bg-pink-100 text-pink-500 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider">Day ${day}</div>
                        <div class="checkbox-custom ${isChecked ? 'checked' : ''}" onclick="toggleCheck(${day}, this, event)"></div>
                    </div>
                    <h3 class="text-lg font-bold text-gray-800 mb-4">${data.theme}</h3>
                    <div class="flex-grow">
                        ${wordsHtml}
                    </div>
                    <div class="mt-4 pt-4 border-t border-pink-50 text-center">
                        <p class="text-xs text-gray-400 status-label italic">${isChecked ? 'âœ¨ å®Œç¾é”æˆ' : 'ğŸ“– é»æ“Šå–®å­—è‡ªæˆ‘æ¸¬è©¦'}</p>
                    </div>
                `;
                planGrid.appendChild(card);
            }
            updateProgress();
        }

        window.toggleCheck = function(day, el, event) {
            event.stopPropagation();
            if (completedDays.has(day)) {
                completedDays.delete(day);
                el.classList.remove('checked');
                el.closest('.cute-card').querySelector('.status-label').innerText = 'ğŸ“– é»æ“Šå–®å­—è‡ªæˆ‘æ¸¬è©¦';
            } else {
                completedDays.add(day);
                el.classList.add('checked');
                el.closest('.cute-card').querySelector('.status-label').innerText = 'âœ¨ å®Œç¾é”æˆ';
            }
            updateProgress();
        }

        // ç¢ºä¿é é¢åŠ è¼‰å®Œæˆå¾ŒåŸ·è¡Œ
        window.addEventListener('load', createCards);
    </script>
